root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = tab

[*.css]
indent_style = tab

[*.scss]
indent_style = tab

[*.sass]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
